<script>


    function wyslij_email() {
      

        var email = document.getElementById("email").value;
        var telefon = document.getElementById("telefon").value;
        var tresc = document.getElementById("tresc").value;

        if (email == "" || email == null || tresc == "" || tresc == null ) {
            alert("Uzupełnij pola e-mail i telefon!");

        } else {


            $.ajax({
                url: "/Home/WyslijEmail",
                type: "POST",
                data: { "email": email, "telefon": telefon, "tresc": tresc },
                success: function (data, textStatus, jqXHR) {
                    if (data.Wynik != "") {
                        alert('Twoja wiadomość ostała wysłana, wkrótce się z Tobą skontaktujemy!');
                        location.reload();
                    } else {
                        alert("Błąd wysyłania wiadomości!");
                    }
                },
                error: function (jqXHR, textStatus, errerThrown) { alert("Error: " + textStatus); }
            });
        }
    }
</script>